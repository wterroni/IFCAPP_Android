<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PerfilIgrejaFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecundary"
        android:layout_marginTop="@dimen/dimen_50dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_13dp"
            android:layout_marginRight="@dimen/dimen_13dp"
            android:layout_marginLeft="@dimen/dimen_13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/membroTextView"
            android:text="@string/cadastro"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/dataMembroButton"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Selecione a data"
                android:textSize="@dimen/dimen_13dp"
                app:layout_constraintTop_toBottomOf="@+id/membroTextView" />

            <TextView
                android:id="@+id/batizadoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_50dp"
                android:text="@string/batizado"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/membroTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/batizadoSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:popupBackground="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:tooltipText="Selecione"
                app:layout_constraintStart_toEndOf="@+id/dataMembroButton"
                app:layout_constraintTop_toBottomOf="@+id/batizadoTextView" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>